        <div class="col-lg-12 mb-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="h6 text-uppercase mb-0">Vaccin</h3>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Namn</th>
                                <th scope="col">Leverantör</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var vaccine in Model.Vaccines)
                            {
                                <tr>
                                    <td>@vaccine.Name</td>
                                    <td>@vaccine.Supplier</td>
                                    <td><a asp-controller="Vaccine" 
                                           asp-action="Edit" 
                                           asp-route-Id="@vaccine.Id" 
                                           class="btn btn-secondary active" 
                                           role="button" 
                                           aria-pressed="true">Redigera</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>


                </div>
            </div>
        </div>

        <a asp-controller="Vaccine" 
           asp-action="New" 
           class="btn btn-secondary" 
           role="button" 
           aria-pressed="true">
            Lägg till
        </a>


    </div>
</section>